@model CURDCORE2PM.Models.adminmodel

<h1 >User Registration </h1>
<form method="post" asp-controller="Home" asp-action="reg">

    @Html.HiddenFor(m => m.Id)

    <div class="form-group col-lg-6">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" required="required" />


    </div>


    <div class="form-group col-lg-6">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" required="required" />



    </div>

    <div class="form-group col-lg-6">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" required="required" />



    </div>


    <div class="form-group col-lg-6">
        <input type="submit" value="Register" class="btn btn-primary" />
    </div>


</form>